<div class="row">
    <div class="col s12 m8">
        <h3>{{thought.title}}
            <small>{{{editIcon thought.user user thought._id false}}}</small>
        </h3>
        <div class="card thought">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{thought.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{thought.user.displayName}}</span>
                <img src="{{thought.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/thoughts/user/{{thought.user._id}}">More From {{thought.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>